# Production Environment Variables for Railway.app
# Copy this file to .env and fill in with real values before deploying

# Database (Railway PostgreSQL)
DB_HOST=your_railway_postgres_host
DB_USER=postgres
DB_PASSWORD=your_railway_postgres_password
DB_NAME=railway
DB_PORT=5432

# JWT Secret (Generate a random 64-char string)
JWT_SECRET=your_jwt_secret_key_here

# Email Configuration (Gmail)
EMAIL_USER=cybergaurd.academy@gmail.com
EMAIL_PASSWORD=your_gmail_app_password

# reCAPTCHA Configuration
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Server Port (Railway sets this automatically)
PORT=5000

# Node Environment
NODE_ENV=production
